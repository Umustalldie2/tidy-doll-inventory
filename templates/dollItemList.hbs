
<div class="doll-item-list-filters">
    <div class="flexrow form-group">
        <label>display all favorites</label>
        <input type="checkbox" class="display-favorites"
            {{checked dollInventory.displayFavorites}}>
    </div>
    {{#each this.dollInventory.itemListFilters as |filter id| }}
    <div class="form-group flexrow">
        <label for="dollInventory.itemListFilters.{{id}}">{{filter.label}}</label>
        <input class="doll-list-filter" type="checkbox"
            data-filter="{{id}}" value="1"
            {{checked filter.value}}>
    </div>
    {{/each}}

</div>
{{#each dollItemList as |section id|}}
{{#if section.items}}
<ul class="inventory-list items-list">
    <li class="items-header">
        <h3>
            {{localize section.label}}
        </h3>
        <div class="control-collapse" data-collapse="{{section.collapsed}}">
            <i class="fa-solid fa-chevrons-up"></i>
        </div>
    </li>
    <ul class="item-list" data-section-id="{{id}}">
        {{#each section.items as |item index|}}
        <li class="item
        {{#if item.flags.tidy5e-sheet.favorite}}
        isFav
        {{/if}}
        {{#if item.system.equipped}}
        equipped
        {{/if}}
        " data-item-id="{{item._id}}">
            <div class="item-name">

                <div class="item-image"
                    style="background-image:url('{{item.img}}')">
                </div>
                <h4>{{item.name}} <span class="item-quantity">qt({{item.system.quantity}})</span></h4>
            </div>
            {{>"modules/tidy-doll-inventory/templates/itemCard.hbs"item=item}}

        </li>
        {{/each}}
    </ul>
</ul>
{{/if}}
{{/each}}